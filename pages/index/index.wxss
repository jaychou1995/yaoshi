/* pages/index/index.wxss */
.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}
.container-top-bg {
  width: 100%;
  height: 352rpx;
  position: relative;
}
.bg-image {
  width: 100%;
  height: 352rpx;
}
.card,
.card-login,
.card-authorize {
  position: absolute;
  width: 96%;
  height: 210rpx;
  bottom: -54rpx;
  box-sizing: border-box;
  padding: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 10px;
  background-color: #fff;
  box-shadow: 0px 0px 5px 2px rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}
.card-user-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.user-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-info {
  width: 66%;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.user-name {
  font-size: 44rpx;
  margin-right: 10rpx;
}
.remarks {
  font-size: 28rpx;
  color: #999999;
}
.qrcode {
  width: 80rpx;
  height: 80rpx;
}
.container-content {
  margin-top: 120rpx;
}
.examine {
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  width: 100%;
  height: 188rpx;
}
.examine-item {
  width: 50%;
  position: relative;
}
.examine-item-image {
  height: 188rpx;
  width: 100%;
}
.examine-item-text {
  font-size: 32rpx;
  position: absolute;
  top: 50%;
  right: 60rpx;
  color: #fff;
  transform: translateY(-50%);
}
.text-dog {
  position: absolute;
  top: -26rpx;
  right: -20rpx;
  min-width: 15px;
  min-height: 15px;
  text-align: center;
  font-size: 12px;
  background: #ff0000;
  border-radius: 50%;
  padding: 6rpx;
}
.card-authorize {
  height: 380rpx;
  bottom: -240rpx;
  padding: 30rpx;
}
.card-content {
  width: 100%;
  height: 100%;
}
.card-content-text {
  margin-top: 20rpx;
  color: #999999;
  font-size: 26rpx;
}
.content-icon {
  margin: 40rpx 0;
}
.content-btn {
  border-radius: 10px !important;
  margin: 0 40rpx;
}
.text-center {
  text-align: center;
}
.wxlogo {
  width: 86rpx;
  height: 86rpx;
}
.loading {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
