/* pages/check/index.wxss */
.container{
  box-sizing: border-box;
  padding: 20rpx 32rpx;
  position: relative;
}
.pieces{
  position: absolute;
  right: 46rpx;
  top: 46rpx;
  color: #999999;
  text-align: right;
  font-size: 14px;
  z-index: 10;
}
.card{
  position: relative;
}
.card-cell{
  border: 1px solid rgba(0, 0, 0, 0.07)!important;
  border-radius: 10px!important;
  margin-bottom: 40rpx;
  box-shadow:0px 0px 15px 0px rgba(0, 0, 0, 0.07);
  padding: 40rpx!important;
}
.card-title{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 16px;
  font-weight: 545;
  width: 500rpx;
}
.container .van-tab{
  max-width: 80px;
}
.content{
  margin-top: 20rpx;
}
.card-value{
  position: absolute;
  right: 40rpx;
  top: 40rpx;
}
.card-label{
  margin-top: 10rpx;
  color: #999999;
  font-size: 14px;
}
.card-label{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}