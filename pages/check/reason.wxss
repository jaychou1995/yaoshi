/* pages/check/reason.wxss */
.container {
  box-sizing: border-box;
  /* padding: 0 60rpx 60rpx 60rpx; */
  font-size: 30rpx;
}
.cell {
  width: 100%;
  margin: 20rpx 0;
  padding: 0 32rpx;
  font-size: 30rpx;
  color: #666666;
}
.section {
  padding: 0 32rpx;
}
.pickeron {
  text-align: left;
  position: relative;
  display: inline-block;
  margin-left: 32rpx;
  width: 302rpx;
  border: 1px solid #e6e6e6;
  padding: 10rpx;
  border-radius: 5px;
}
.arrow-down {
  position: absolute !important;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.textarea {
  width: 100%;
  height: 262rpx;
  color: #666666;
  box-sizing: border-box;
  padding: 20rpx;
  border: 1px solid #e6e6e6;
  border-radius: 5px;
  position: relative;
}
.text-count {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: #999999;
}
.btn {
  width: 90% !important;
  margin-top: 80rpx;
}
.popup-content {
  width: 500rpx;
  height: 410rpx;
  box-sizing: border-box;
  padding: 32rpx;
  position: relative;
}
.popup-content-title {
  font-size: 30rpx;
  color: #4186fb;
  text-align: center;
  margin-bottom: 60rpx;
}
.get-btn {
  width: 100%;
  border-radius: 10px !important;
}
.err-msg {
  width: 100%;
  height: 20px;
  font-size: 14px;
  color: red;
  margin-bottom: 20rpx;
}
.picker {
  color: #666666;
}
