/* pages/checked/detail.wxss */
.header {
  position: relative;
  width: 100%;
  height: 120rpx;
  text-align: center;
}
.detail-state {
  position: absolute;
  left: 0;
  top: 0;
  width: 120rpx;
  height: 120rpx;
}
.header-set {
  margin-left: 90rpx;
}
.header-title,
.content-title {
  /* line-height: 60px; */
  font-size: 36rpx;
  vertical-align: middle;
  font-weight: bold;
}
.tag {
  margin-left: 20rpx;
}
.detail-info {
  padding: 0 32rpx;
}
.bb {
  padding-bottom: 40rpx;
  border-bottom: 1px solid #e6e6e6;
}
.info-cell {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: border-box;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.cell-item {
  flex: 1;
}
.flex-more {
  flex: 2;
}
.item-label {
  color: #999999;
}
.content {
  box-sizing: border-box;
  padding: 32rpx 32rpx 60rpx 32rpx;
}
.content-title {
  line-height: 40px;
}
.drugs-item {
  font-size: 14px;
  color: #999999;
  margin-bottom: 40rpx;
}
.title-main {
  font-size: 30rpx;
  display: inline-block;
  max-width: 580rpx;
  width: 580rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #000000;
  vertical-align: middle;
}
.drugs-item-title {
  overflow: hidden;
}
.item-bag {
  float: right;
  line-height: 52rpx;
}
.item-value {
  margin-right: 20rpx;
  font-size: 22rpx;
}
.drugs-cell {
  margin-top: 20rpx;
  text-indent: 2em;
}
.autograph {
  font-size: 14px;
}
.autograph-item {
  border-bottom: 1px solid #e6e6e6;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  margin-top: 54rpx;
}
/* .autograph-item:last-child{
  border-bottom: none
} */
.autograph-cell {
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
}
.item-image {
  margin-top: 40rpx;
  text-align: center;
}
.autograph-image {
  width: 374rpx;
  height: 150rpx;
}
.item-text {
  margin-right: 20rpx;
}
.o-text {
  max-width: 500rpx;
  width: 500rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.reject-content {
  margin: 40rpx 0 60rpx 0;
  font-size: 30rpx;
}
