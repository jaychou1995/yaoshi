/* pages/entry/entry.wxss */
.container-top-bg{
  width: 100%;
  height: 352rpx;
  position: relative;
}
.bg-image{
  width: 100%;
  height: 352rpx;
}
.card, .card-login, .card-authorize{
  position: absolute;
  width: 96%;
  height: 200rpx;
  bottom: -50rpx;
  box-sizing: border-box;
  padding: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 10px;
  background-color: #fff;
  box-shadow: 0px 0px 5px 2px rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}
.card-login{
  height: 600rpx;
  bottom: -460rpx;
  padding: 30rpx;
}
.card-login van-tabs{
  width: 100%;
  height: 100%;
}
.mt20{
  margin-top: 20rpx;
}
.mt40{
  margin-top: 40rpx;
}
.btn-style{
  border-radius: 5px!important;
}
.card-authorize{
  height: 380rpx;
  bottom: -240rpx;
  padding: 30rpx;
}
.card-content{
  width: 100%;
  height: 100%;
}
.card-content-text{
  margin-top: 20rpx;
  color: #999999;
  font-size: 26rpx;
}
.content-icon{
  margin: 40rpx 0;
}
.content-btn{
  border-radius: 10px!important;
  margin: 0 40rpx;
}
.text-center{
  text-align: center;
}
.wxlogo{
  width: 86rpx;
  height: 86rpx;
}